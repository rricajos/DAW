---
// Importa los tipos de Astro para las propiedades del componente
interface Props {
	title: string;
	body: string;
	description: string;
	href: string;
	stat: string;
}

// Extrae las propiedades del componente Astro
const { href, title, description, body, stat } = Astro.props;
console.log(stat);

// Determina el estado del card basado en la propiedad 'stat'
const getStatusInfo = (stat: string) => {
	switch (stat) {
		case "-":
			return { bgcolor: "background-color: #3f4000;", text: "Desactualizado" };
		case "+":
			return {
				bgcolor: "background-color: #500000;",
				text: "Commits no registrados",
			};
		case "U":
			return {
				bgcolor: "background-color: #500000;",
				text: "Conflictos de Union/Merge",
			};
		case "":
			return { bgcolor: "background-color: #005000;", text: "Actualizado" };
		default:
			return {
				bgcolor: "background-color: #17191e;",
				text: "Estado Desconocido",
			};
	}
};

const { bgcolor, text } = getStatusInfo(stat);
---

<li class="link-card">
	<a href={href}>
		<h2 style={bgcolor} class="stat-tag">
			{title}
		</h2>
		<p id="description">
			{description}
			<!-- <span>&rarr;</span> -->
		</p>
		<p>
			{text}
		</p>
	
	</a>
</li>

<style>
	#description {
		margin-top: 2rem;
	}
	.stat-tag {
		position: absolute;
		top: 0;
		left: 0;
		background-color: #17191e;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);

		border-radius: 0 0 7px 0;
		padding: 0.5rem calc(1.5rem - 1px);

		font-size: 1rem;
	}
	.link-card {
		position: relative;
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		overflow: hidden;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
