---
interface Props {
	title: string;
	body: string;
	href: string;
	stat: string;
}

const { href, title, body, stat } = Astro.props;

const status = () => {
	switch (stat) {
		case "-":
			return "Desactualizado.";

		case "+":
			return "Commits no registrados.";

		case "U":
			return "Conflictos de Union/Merge";

		default: // case " "
			return "Actualizado";
	}
};
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<!-- <span>&rarr;</span> -->
		</h2>
		<p>
			{body}
		</p>
		<span class="status-card">
			{status}
		</span>
	</a>
</li>
<style>
	.status-card {
		position: absolute;
		top: 0;
		left: 0;
		background-color: #17191e;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);

		border-radius: 0 0 7px 0;
		padding: 0.5rem calc(1.5rem - 1px);
	}
	.link-card {
		position: relative;
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin-top: 1rem;

		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
